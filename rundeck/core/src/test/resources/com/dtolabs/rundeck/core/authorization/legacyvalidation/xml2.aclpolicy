<policies>
    <policy description="Admin can do anything, anytime, except, run scripts.">
    
        <context project="*">
            <resource type="*" name="*">
                <command module="*" name="*" actions="*"/>
                <!-- no script love.
                <command group="*" job="*" actions="*"/>
                -->
            </resource>        
        </context>
        
        <by>
            <group name="admin-no-script"/>
        </by>
        
        <when>
            <timeandday day="*" hour="*" minute="*"/>
        </when>
    
    </policy>
</policies>